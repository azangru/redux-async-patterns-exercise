{
    "presets": [
        "es2015",
        "stage-2",
        "react"
    ],
    "plugins": [
        ["babel-root-import", {
            "rootPathSuffix": "src/js"
        }]
    ],
    "env": {
        "node": {
            "plugins": [
                [
                    "babel-plugin-transform-require-ignore",
                    {
                        "extensions": [".scss", ".css"]
                    }
                ]
            ]
        }
    }
}
